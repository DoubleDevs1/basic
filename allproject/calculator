def add(x, y):
    return x + y

def subtract(x, y):
    return x - y

def multiply(x, y):
    return x * y

def divide(x, y):
    if y != 0:
        return x / y
    else:
        return "Can't divide by zero"

print(' A Calculator...')

#math opr symbol option
print('Choose the operation:')
print('1. Add')
print('2. Subtract')
print('3. Multiply')
print('4. Divide')

#input the opr symbol
opr = input('enter the option number: ')

#num1 and num2
num1 = float(input('enter a number: '))
num2 = float(input('enter a number again: '))

#non-visible result
if opr == '1':
    result = add(num1, num2)
elif opr == '2':
    result = subtract(num1, num2)
elif opr == '3':
    result = multiply(num1, num2)
elif opr == '4':
    result = divide(num1. num2)
else:
    print('Invalid input')

#final result show here
print('Result : ',result)